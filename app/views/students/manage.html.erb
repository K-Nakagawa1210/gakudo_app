<div class="main-container-narrow text-center">

  <div class="back-button-area mb-4 d-flex justify-content-start">
    <%= link_to "前のページに戻る", settings_path, class: "btn btn-outline-secondary btn-sm" %>
  </div>

  <h1 class="school-list-title mb-4">児童一覧（設定）</h1>

  <div class="action-button-area mb-4 text-end">
    <%= link_to "＋ 新しい児童を追加", new_student_path, class: "btn new-school-btn" %>
  </div>

  <div class="card shadow-sm school-list-card">
    <div class="table-responsive">
      <table class="table table-striped table-hover student-table">
        <thead>
          <tr>
            <th class="student-name-col">名前</th>
            <th>学校</th>
            <th>学年</th>
            <th class="operation-col-student">操作</th>
          </tr>
        </thead>
        <tbody>
          <% @students.each do |student| %>
            <tr>
              <td><%= student.student_name %></td>
              <td><%= student.school.school_name if student.school %></td>
              <td class="text-center"><%= student.grade.level %>年</td>
              <td class="operation-cell-student">
                <%= link_to "編集", edit_student_path(student), class: "btn btn-sm action-btn btn-warning-outline" %>
                <%= link_to "削除", student_path(student), data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" }, class: "btn btn-sm action-btn btn-danger-outline" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>