<div class="main-container-narrow text-center">

  <div class="back-button-area mb-4 d-flex justify-content-start">
    <%= link_to "前のページに戻る", settings_path, class: "btn btn-outline-secondary btn-sm" %>
  </div>

  <h1 class="school-list-title mb-4">学校一覧</h1>

  <div class="action-button-area mb-4 text-end">
    <%= link_to "新しい学校を追加", new_school_path, class: "btn btn-primary new-school-btn" %>
  </div>

  <div class="card shadow-sm school-list-card">
    <div class="table-responsive">
      <table class="table table-striped table-hover school-table">
        <thead>
          <tr>
            <th class="school-name-col">学校名</th>
            <th class="operation-col">操作</th>
          </tr>
        </thead>
        <tbody>
          <% @schools.each do |school| %>
            <tr>
              <td class="school-name-cell"><%= school.school_name %></td>
              <td class="operation-cell">
                <%= link_to "編集", edit_school_path(school), class: "btn btn-warning btn-sm action-btn" %>
                <%= link_to "削除", school_path(school), 
                    method: :delete, 
                    data: { confirm: "本当に削除しますか？" },
                    class: "btn btn-danger btn-sm action-btn" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>