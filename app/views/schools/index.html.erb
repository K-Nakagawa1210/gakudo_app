<h1>学校一覧</h1>

<%= link_to "新しい学校を追加", new_school_path, class: "btn btn-primary" %>

<table border="1" cellspacing="0" cellpadding="6">
  <thead>
    <tr>
      <th>学校名</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.school_name %></td>
        <td>
          <%= link_to "編集", edit_school_path(school), class: "btn btn-warning" %>
          <%= link_to "削除", school_path(school), 
                method: :delete, 
                data: { confirm: "本当に削除しますか？" },
                class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

