<div class="container mt-5 text-center">
  <h1 class="mb-4"><%= current_user.club_name %>クラブ 管理ホーム</h1>

  <!-- 現在時刻表示 -->
  <div class="mb-4">
    <h3>🕒 現在時刻：<span id="current-time"></span></h3>
  </div>

  <!-- メインメニュー -->
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="d-grid gap-3">
        <%= link_to "🏫 出席登録ページ", attendance_index_schools_path, class: "btn btn-primary" %>
        <%= link_to "📋 出席一覧ページ", attendances_path, class: "btn btn-success btn-lg" %>
        <%= link_to "⚙️ 設定", settings_path, class: "btn btn-warning btn-lg" %>
        <%= link_to "🚪 ログアウト", destroy_user_session_path, data: { turbo_method: :delete }, class: "btn btn-danger btn-lg" %>
      </div>
    </div>
  </div>
</div>

<!-- 時刻をリアルタイム更新するスクリプト -->
<script>
  function updateTime() {
    const now = new Date();
    const formatted = now.toLocaleString('ja-JP', {
      year: 'numeric', month: '2-digit', day: '2-digit',
      hour: '2-digit', minute: '2-digit', second: '2-digit'
    });
    document.getElementById('current-time').textContent = formatted;
  }
  setInterval(updateTime, 1000);
  updateTime();
</script>
